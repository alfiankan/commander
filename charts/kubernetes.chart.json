{
  "kind": "kubectl",
  "description": "commander for Kubernetes kubectl",
  "charts": [
    {
      "usage": "kubectl get node detail statistic",
      "cmdt": "kubectl top node -o wide",
      "prompt": []
    },
    {
      "usage": "kubectl set current namespace",
      "cmdt": "kubectl config set-context --current --namespace={{namespace}}",

      "prompt": [
        {
          "tmplt": "namespace",
          "label": "namespace ??",
          "kind": "textinput"
        }
      ]
    },
    {
      "usage": "kubectl scale replicaset at spesific namespace",
      "cmdt": "kubectl scale --replicas={{total_replicas}} {{kube_kind}} -n {{namespace}}",
      "prompt": [
        {
          "tmplt": "namespace",
          "label": "namespace ??",
          "kind": "textinput"
        },
        {
          "tmplt": "kube_kind",
          "label": "input kubernetes object (deployment/replicaset) ",
          "kind": "textinput"
        },
        {
          "tmplt": "total_replicas",
          "label": "set total replicas",
          "kind": "textinput"
        }
      ]
    },
    {
      "usage": "kubectl apply manifest with input file",
      "cmdt": "kubectl apply -f {{file_path}}",
      "prompt": [
        {
          "tmplt": "file_path",
          "label": "manifest file path",
          "kind": "file_path_input"
        }
      ]
    },
    {
      "usage": "kubectl run job with image",
      "cmdt": "kubectl create deployment {{job_name}} --image={{image_name}}",
      "prompt": [
        {
          "tmplt": "job_name",
          "label": "set job name",
          "kind": "textinput"
        },
        {
          "tmplt": "image_name",
          "label": "define image name and tag eg. nginx:latest ",
          "kind": "textinput"
        }
      ]
    },
    {
      "usage": "kubectl get all pod all namespace wide options",
      "cmdt": "kubectl get all -A -o wide",
      "prompt": []
    }
  ]
}
